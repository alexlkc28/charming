<odoo>
    <data>
        <record id="view_contacts_form_abk_contact_address" model="ir.ui.view">
            <field name="name">res.partner.form.abk.contact.address</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="inside">
                    <label for="chinese_street" string="Chinese Address"/>
                    <div class="o_address_format">
                        <field name="chinese_street" placeholder="Street..." class="o_address_street"/>
                        <field name="chinese_street2" placeholder="Street 2..." class="o_address_street"/>
                        <field name="chinese_city" placeholder="City" class="o_address_city"/>
                        <field name="chinese_state_id" class="o_address_state" placeholder="State"
                               options='{"no_open": True}'/>
                        <field name="chinese_zip" placeholder="Zip" class="o_address_zip"/>
                        <field name="chinese_country_id" placeholder="Country" class="o_address_country"
                               options='{"no_open": True, "no_create": True}'/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>